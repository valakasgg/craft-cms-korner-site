{% set baseClass = '
    transition-all
    inline-block
    font-medium
    py-3
    px-6
    rounded
    flex-shrink-0
    ring-4
    shadow-none
    ring-transparent
    focus:ring-opacity-30
    focus:outline-none
' %}

{% set class = class is defined ? baseClass ~ ' ' ~ class : baseClass %}
{% set type = type is defined ? type : 'button' %}

<{{ type }}
    {{ type == 'a' ? ('href="' ~ button.url ~ '"')|raw }} 
    class="{{ class }}"
    {{ attributes is defined ? attributes|raw }}
>
    {{ button.text|raw }}
</{{ type }}>
